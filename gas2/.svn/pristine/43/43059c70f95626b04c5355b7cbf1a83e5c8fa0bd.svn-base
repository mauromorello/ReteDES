function proprietario_messaggio_bacheca($idu){
  //ID ditta --> IdUser
  $sql = "SELECT retegas_bacheca.id_utente
			FROM retegas_bacheca 
			WHERE (((retegas_bacheca.id_bacheca)='$idu'));";
  $ret = mysql_query($sql);
  $row = mysql_fetch_row($ret);
  return $row[0];
}
