table{
    width:100%;
    margin:0;
    padding:0;
    margin-top: 1em;
    font-size:100.01%;
    vertical-align: top;    
}

table.small_size{
    font-size : .76em;
}

table.medium_size{
    font-size : .86em; 
}

table.large_size{
    font-size : .96em; 
}

td  {padding:2px;}
th  {padding:2px;}

thead th{
    vertical-align:top;
    font-weight:bold;
    border-bottom: solid 1px;
    margin-bottom: 5px;
    cursor: s-resize;
}

tfoot th{
    
    vertical-align:top;
    font-weight:bold;
    border-top: solid 1px; 
    border-bottom: solid 2px;
    margin-top: 5px;
}


table th a:link{
    color:#030;
    text-decoration: none;
}
table th a:visited{
    color:#030;
    text-decoration: none;
}
table td a:link{
    color:#369;
}
table td a:visited{
    color:#000;
}
table a:hover{
    text-decoration:none;
}
table a:active{
    color:#000;
}

tbody tr.odd td{
    background:#FAF0E0;
}

tbody tr.odd th{
    background:#DAD0C0;
}


