.schedina_ordine {margin-bottom:1em; padding:0; border: 0;}
.schedina_ordine table{width:100%;margin:0;padding:0}
.schedina_ordine table .nested th{background-color: #DAD0C0; color:#000000; font-weight:bold; text-align: left; padding-right: .5em; overflow: hidden;}
.schedina_ordine table .nested td{background-color: #FAF0E0; color:#000000; font-weight:normal; text-align: left; padding-left : .5em; overflow: hidden; vertical-align: bottom;}
.schedina_ordine table .nested caption{background-color: #F0F0F0; color:#000000; font-weight:bold; text-align: left; padding-left : .5em; overflow: hidden; vertical-align: bottom;}
                                                             